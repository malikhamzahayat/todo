<h1>Todos#new</h1>
<p>Find me in app/views/todos/new.html.erb</p>

<% if @todo.errors.any? %>
	<h2>The following errors prevented the todo from being saved</h2>
	<ul>
	<% @todo.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

<%= form_for @todo do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
	  <%= f.label :description %><br>
	  <%= f.text_area :description %>
	</p>

	<p>
	  <%= f.submit %>
	</p>

<%end%>